{
    "version": 3,
    "configurePresets": [
        {
            "name": "dev",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ZCNES_C_FLAGS": "-Wall -Wextra -fsanitize=address -fsanitize=undefined",
                "ZCNES_LD_FLAGS": "-fsanitize=address -fsanitize=undefined"
            }
        },
        {
            "name": "msvc",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "ZCNES_C_FLAGS": "/W4"
            }
        }
    ]
}