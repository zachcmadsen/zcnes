{
    "version": 3,
    "configurePresets": [
        {
            "name": "flags-linux",
            "hidden": true,
            "cacheVariables": {
                "ZCNES_C_FLAGS": "-Wall -Wextra"
            }
        },
        {
            "name": "dev",
            "inherits": [
                "flags-linux"
            ],
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "ci-linux",
            "inherits": [
                "flags-linux"
            ],
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc"
            }
        },
        {
            "name": "ci-sanitize",
            "inherits": [
                "ci-linux"
            ],
            "binaryDir": "${sourceDir}/build-sanitize",
            "cacheVariables": {
                // -fno-sanitize-recover=all disables recovery for sanitizers
                "ZCNES_C_FLAGS_SANITIZE": "-g -fsanitize=address -fsanitize=undefined -fno-sanitize-recover=all",
                "ZCNES_LINKER_FLAGS_SANITIZE": "-fsanitize=address -fsanitize=undefined"
            }
        },
        {
            "name": "ci-msvc",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Release",
                "ZCNES_C_FLAGS": "/W4"
            }
        }
    ]
}